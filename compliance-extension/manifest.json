{
  "manifest_version": 3,
  "name": "Compliance Buddy Extension",
  "version": "1.0.0",
  "description": "Chrome extension for compliance validation with overlay display",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  
  "host_permissions": [
    "https://gently-metal-maria-publicly.trycloudflare.com/*",
    "http://localhost:8000/*",
    "http://localhost:5173/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["http://localhost:5173/mockup*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Compliance Buddy Validator"
  }
  
}
